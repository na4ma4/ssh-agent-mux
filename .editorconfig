# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 2
charset = utf-8
end_of_line = lf
tab_width = 2

[(*.MD|*.md)]
trim_trailing_whitespace = false
insert_final_newline = false

[*.ts]
trim_trailing_whitespace = true
insert_final_newline = true

[*.tf]
indent_style = space
indent_size = 2
charset = utf-8

[*.json]
indent_style = space
indent_size = 2
charset = utf-8

[*.yml]
indent_style = space
indent_size = 2
charset = utf-8

[*.yaml]
indent_style = space
indent_size = 2
charset = utf-8
